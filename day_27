//day 27
//45 days of code

#include <bits/stdc++.h>
using namespace std;

int main() 
{
    int t, a, b, x, y;
    cout << "Enter the number of times it needed to be run : ";
    cin >> t;
    
    while (t--) 
    {
        cin >> a >> b >> x >> y;
        if (a == b) 
        {
            cout << "YES" << endl;
        } 
        else if (a > b) 
        {
            a - b <= y ? cout << "YES" << endl : cout << "NO" << endl;
        } 
        else if (a < b) 
        {
            b - a <= x ? cout << "YES" << endl : cout << "NO" << endl;
        }
    }
    return 0;
}

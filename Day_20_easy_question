//Day 20
//45 Days Of Code

#include <iostream>
using namespace std;

int main() 
{
    int t;
    cout << "Enter the number of test cases to be run : ";
    cin >> t;
    
    while(t--)
    {
        int x, y, z, m, left, result;
        cin >> x >> y >> z >> m;
        left=y-z;
        result=x+left*m;
        cout << result << endl;
        cout << "_________" << endl;
    }

    return 0;
}

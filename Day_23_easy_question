//Day 23
//45 Days Of Code

#include <iostream>
using namespace std;

int main() 
{
    int t;
    cout << "Enter the number of test cases to be run : ";
    cin >> t;
    
    while(t--)
    {
        int c, x, y, result;
        cin >> c >> x >> y;
        result=(c-x)*y;
        cout << result << endl;
        cout << "_______" << endl;
    }
    
    return 0;
}

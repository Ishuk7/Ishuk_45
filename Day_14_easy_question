//Day 14
//45 Days Of Code

#include <iostream>
using namespace std;

int main() 
{
    int t;
    cout << "Enter the number of test cases to be run : ";
    cin >> t;
    
    while(t--)
    {
        int x,y,a,b; // x=total cards       y=cards facing up
        cin >> x >> y;
        a=x-y;
        b=x/2;
        
        if (a>b)
        {
            cout << y << endl;
        }
        else
        {
            cout << a << endl;
        }
        cout << "___________" << endl;
    }

    return 0;
}

//Day 19
//45 Days Of Code 

#include <iostream>
using namespace std;

int main() 
{
    int t;
    cout << "Enter the number of test cases to be run : ";
    cin >> t;
    
    while(t--)
    {
        int x, y, r1, r2;
        cin >> x >> y;
        r1=x-y;
        if(r1<0)
        {
            r2=r1*(-1);
            
            cout << r2 << endl;
        }
        else
        {
            cout << r1 << endl;
        }
        cout << "________" << endl;
    }

    return 0;
}
